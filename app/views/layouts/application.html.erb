<!DOCTYPE html>
<html>
  <head>
    <title>WatchableApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <nav class="navbar navbar-default navigation-clean">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand navbar-link" href="/">Watchable</a>
                    <button class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
                </div>
                <div class="collapse navbar-collapse" id="navcol-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active" role="presentation">
                           <% if !current_user %>
                                <li role="presentation"><%= link_to "Sign Up", new_user_registration_path %></li>
                                <li role="presentation"><%= link_to "Log In", new_user_session_path %></li>
                              <% elsif current_user %>

                                <li role="presentation"><%= link_to "Profile", user_path(current_user) %></li>

                                <li role="presentation"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
                                <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false" href="#">Menu <span class="caret"></span></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li role="presentation"><a href="/charges/new">Add New Customer</a></li>
                                        <li role="presentation"><a href="/products/new">Add New Product</a></li>
                                    </ul>
                                </li>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <%= yield %>
  </body>
</html>
